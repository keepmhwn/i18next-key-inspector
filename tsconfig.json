{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "types": ["node"],
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
